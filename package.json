{
    "name": "@basedx/monorepo",
    "version": "1.0.0",
    "keywords": [
        "ethereum",
        "react",
        "uniswap",
        "workspaces",
        "yarn"
    ],
    "private": true,
    "scripts": {
        "frontend:build": "yarn workspace @basedx/frontend build --max-old-space-size=12288",
        "frontend:start": "yarn workspace @basedx/frontend start",
        "frontend:dev": "yarn workspace @basedx/frontend dev",
        "frontend:lint": "yarn workspace @basedx/frontend lint",
        "build": "yarn workspace @basedx/frontend build --max-old-space-size=12288",
        "prettier": "yarn workspace @basedx/frontend prettier",
        "chain": "yarn workspace @basedx/hardhat chain",
        "fork": "yarn workspace @basedx/hardhat fork",
        "node": "yarn workspace @basedx/hardhat chain",
        "test": "yarn workspace @basedx/hardhat test",
        "dev": "yarn workspace @basedx/frontend dev",
        "start": "yarn workspace @basedx/frontend start",
        "compile": "yarn workspace @basedx/hardhat compile",
        "deploy": "yarn workspace @basedx/hardhat deploy",
        "verify": "yarn workspace @basedx/hardhat verify",
        "watch": "yarn workspace @basedx/hardhat watch",
        "accounts": "yarn workspace @basedx/hardhat accounts",
        "balance": "yarn workspace @basedx/hardhat balance",
        "send": "yarn workspace @basedx/hardhat send",
        "ipfs": "yarn workspace @basedx/frontend ipfs",
        "surge": "yarn workspace @basedx/frontend surge",
        "s3": "yarn workspace @basedx/frontend s3",
        "ship": "yarn workspace @basedx/frontend ship",
        "generate": "yarn workspace @basedx/hardhat generate",
        "account": "yarn workspace @basedx/hardhat account",
        "mineContractAddress": "cd packages/hardhat && npx hardhat mineContractAddress",
        "wallet": "cd packages/hardhat && npx hardhat wallet",
        "fundedwallet": "cd packages/hardhat && npx hardhat fundedwallet",
        "flatten": "cd packages/hardhat && npx hardhat flatten",
        "clean": "cd packages/hardhat && npx hardhat clean",
        "run-graph-node": "yarn workspace @basedx/services run-graph-node",
        "remove-graph-node": "yarn workspace @basedx/services remove-graph-node",
        "clean-graph-node": "yarn workspace @basedx/services clean-graph-node",
        "graph-codegen": "yarn workspace @basedx/subgraph graph codegen",
        "graph-build": "yarn workspace @basedx/subgraph graph build",
        "graph-create-local": "yarn workspace @basedx/subgraph graph create --node http://localhost:8020/ scaffold-eth/your-contract",
        "graph-remove-local": "yarn workspace @basedx/subgraph graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
        "graph-deploy-local": "yarn workspace @basedx/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract",
        "graph-ship-local": "yarn graph-codegen && yarn graph-build --network localhost && yarn graph-deploy-local",
        "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
        "postinstall": "husky install",
        "prepare": "husky install"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/@graphprotocol/graph-ts",
            "**/@graphprotocol/graph-ts/**",
            "**/hardhat",
            "**/hardhat/**",
            "**/hardhat-ts",
            "**/hardhat-ts/**"
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "husky": "^7.0.2",
        "lint-staged": "^13.0.3"
    },
    "lint-staged": {
        "packages/frontend/src/**/*.{js,jsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}